<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="application.App.Pages.View.MainPageView"
             Title="MainPageView"
             xmlns:details="clr-namespace:application.BL.Models.Details;assembly=application.BL"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <Grid RowDefinitions="auto, *" ColumnDefinitions="auto">
        <toolkit:Expander>
            <toolkit:Expander.Header>
                <Label Text="Employee"/>
            </toolkit:Expander.Header>
            <VerticalStackLayout Padding="10">
                <SearchBar Text="Search"></SearchBar>
                <CollectionView ItemsSource="{Binding EmployeeDetailModels}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="details:EmployeeDetailModel">
                            <Border>
                                <Grid RowDefinitions="auto, auto" ColumnDefinitions="*, auto" Padding="5">
                                    <Label Grid.Row="1"
                                           Grid.Column="0"
                                           Text="{Binding FullName}"
                                           FontAttributes="Italic"
                                           VerticalOptions="End" />
                                    <CheckBox Grid.Row="1" Grid.Column="1"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </toolkit:Expander>
    </Grid>
</ContentPage>